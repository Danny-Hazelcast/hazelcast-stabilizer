<hazelcast xsi:schemaLocation="http://www.hazelcast.com/schema/config
                               http://www.hazelcast.com/schema/config/hazelcast-config-3.2.xsd"
           xmlns="http://www.hazelcast.com/schema/config"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <group>
        <name>workers</name>
    </group>

    <network>
        <port port-count="200" auto-increment="true">5701</port>
        <join>
            <multicast enabled="false"/>
            <tcp-ip enabled="true">
                <!--MEMBERS-->
            </tcp-ip>
        </join>
    </network>

    <partition-group enabled="true" group-type="HOST_AWARE">
    </partition-group>

    <map name="MapStore*">
        <map-store enabled="true">
            <class-name>com.helpers.MapStoreWithCounter</class-name>
            <write-delay-seconds>5</write-delay-seconds>
        </map-store>
    </map>

    <map name="MaxSizeMap*">
        <eviction-policy>LRU</eviction-policy>
        <max-size policy="PER_NODE">1000</max-size>
        <eviction-percentage>25</eviction-percentage>
        <min-eviction-check-millis>0</min-eviction-check-millis>
    </map>

    <map name="NoBackup*">
        <backup-count>0</backup-count>
        <async-backup-count>0</async-backup-count>
        <statistics-enabled>false</statistics-enabled>
    </map>

    <map name="ObjectMap*">
        <in-memory-format>OBJECT</in-memory-format>
    </map>

    <cache name="offHeapEvictionCache*">
        <backup-count>1</backup-count>
        <async-backup-count>0</async-backup-count>
        <eviction-percentage>10</eviction-percentage>
        <eviction-threshold-percentage>95</eviction-threshold-percentage>
        <eviction-policy>LRU</eviction-policy>
        <in-memory-format>NATIVE</in-memory-format>
        <statistics-enabled>true</statistics-enabled>
    </cache>

    <native-memory allocator-type="POOLED" enabled="true">
        <size unit="GIGABYTES" value="1" />
        <metadata-space-percentage>5</metadata-space-percentage>
    </native-memory>

</hazelcast>